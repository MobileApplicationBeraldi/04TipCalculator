<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:inputType="number"
        android:maxLength="6">
    </EditText>

    <TextView
        android:id="@+id/amountDisplayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:background="@android:color/holo_blue_bright"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        >
    </TextView>

    <android.support.v4.widget.Space
        android:layout_height="10dp"/>
    <android.support.v4.widget.Space />

    <TextView
        android:id="@+id/customPercentageTextView"
        android:layout_width="wrap_content"
        android:text="Custom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        >
    </TextView>

    <SeekBar
        android:id="@+id/customSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:progress="18"
        android:max="30"
        >
    </SeekBar>

    <LinearLayout
        android:id="@+id/percentageLinearLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        >

        <TextView
            android:id="@+id/percentage15TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15%"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/percentageCustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="18%"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/tipTextView"
        android:text="Tip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/tipLinearLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        >

        <TextView
            android:id="@+id/tip15TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tipCustomTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@android:color/holo_blue_bright"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/totalTextView"
        android:text="Total"
        android:textAppearance="?android:attr/textAppearanceMedium"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/totalLinearLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        >

        <TextView
            android:id="@+id/total15TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="5dp"

            />

        <TextView
            android:id="@+id/totalCustomTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@android:color/holo_blue_bright"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>

</GridLayout>
